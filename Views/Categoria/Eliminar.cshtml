@model WebApplication1.Models.Categoria
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form method="post" asp-action="Eliminar">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div asp-validation-sumary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">¿Está seguro de Eliminar esta Categoria?</h2>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="NombreCategoria" class="form-label">Nombre Categoria</label>
                    <input asp-for="NombreCategoria" disabled class="form-control" />
              
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Orden" class="form-label">Orden</label>
                    <input asp-for="Orden" disabled class="form-control" />
                 
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Descripcion" class="form-label">Descripcion</label>
                    <input asp-for="Descripcion" disabled class="form-control" />
                    
            </div>
            <div class="d-grid gap-2 d-md-block">
                <button type="submit" class="btn btn-primary">Eliminar </button>
                <a asp-controller="Categoria" asp-action="Index" class="btn btn-success">regresar</a>
            </div>
        </div>
    </div>
</form>
@section Scripts
    {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
